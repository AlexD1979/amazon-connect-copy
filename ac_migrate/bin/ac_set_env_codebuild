#!/bin/bash

## #################################################################
## Collection of commands to prepare the environment
## to migrate from one Connect environment to another
## #################################################################
##
## Set directories
homedir=`pwd`
##
## Uninstall CLI v1 and install v2
#echo "Uninstalling older version of AWS CLI..."
#yum -y remove awscli
##
## Install latest CLI v2
echo "Installing new version of AWS CLI..."
curl "https://awscli.amazonaws.com/awscli-exe-linux-x86_64.zip" -o "awscliv2.zip"
unzip awscliv2.zip
./aws/install -i /usr/local/aws-cli -b /usr/local/bin --update
rm awscliv2.zip
rm -r aws
##
cd ${homedir}
chmod 700 ac*
chmod 700 jq
echo "export PATH=/usr/local/bin:$PATH:${homedir}" > ${homedir}/.ac
## . .ac
echo "DONE"
##
## DONE
